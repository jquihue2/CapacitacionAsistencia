<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/color_gris_oscuro"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="7"
            android:id="@+id/tvNro_item"
            android:layout_margin="2dp"
            android:textColor="@color/color_blanco" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="4dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="F.I."
                android:id="@+id/textView33"
                android:paddingEnd="4dp"
                android:textSize="10sp"
                android:textColor="#3e000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="28/01/2016 10:00:00 a.m."
                android:id="@+id/tvFecha_inicio"
                android:textSize="10sp"
                android:textColor="@color/color_negro" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="F.F."
                    android:id="@+id/textView36"
                    android:paddingEnd="4dp"
                    android:paddingStart="10dp"
                    android:textSize="10sp"
                    android:textColor="#3e000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="28/01/2016 11:30:00 a.m."
                    android:id="@+id/tvFecha_fin"
                    android:singleLine="false"
                    android:textSize="10sp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/color_negro" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TRABAJOS EN ESPACIOS CONFINADOS"
                android:id="@+id/tvDescripcion"
                android:textColor="@color/color_azul" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>